<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingVertical="10dp">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="10dp"
    android:background="@drawable/rounded_rectangle_orange"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:paddingTop="5dp"
>
    <ImageView
        android:id="@+id/ava_reaction"
        android:layout_width="32dp" android:layout_height="32dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="5dp"
        card_view:srcCompat="@drawable/hpfb"/>
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="20dp"
                  android:orientation="vertical">

        <TextView android:id="@+id/message_ava" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingBottom="8dp"
                  android:text="@string/app_name"
                  android:textColor="@color/colorBlack"
                  android:textSize="15sp" android:textStyle="bold"/>
        <TextView android:id="@+id/date_ava" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:fontFamily="sans-serif-condensed"
                  android:text="@string/app_name" android:textAlignment="viewEnd"
                  android:textColor="@color/colorBlack"
                  android:textStyle="italic"/>

    </LinearLayout>

</LinearLayout>
</RelativeLayout>