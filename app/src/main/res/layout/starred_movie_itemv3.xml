<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:paddingBottom="20dp"
                                    android:paddingTop="20dp"
                                    app:cardBackgroundColor="@color/colorSecundaryDark">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical">
        <ImageView android:id="@+id/starred_image" android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:maxHeight="200dp"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:paddingBottom="10dp"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp"
        >

            <TextView android:id="@+id/starred_description" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentStart="true"
                      android:layout_centerVertical="true"
                      android:paddingBottom="8dp"
                      android:paddingTop="20dp"
                      android:text="@string/app_name" android:textColor="@color/colorWhiteText"
                      android:textSize="15sp" android:textStyle="bold"/>
            <TextView android:id="@+id/starred_title" android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:paddingBottom="10dp"
                      android:text="@string/app_name"
                      android:textColor="@color/colorWhiteText"
                      android:textStyle="bold"
                      android:textSize="20sp"
            />
            <TextView android:id="@+id/starred_popularity" android:layout_width="match_parent"
                      android:layout_height="wrap_content" android:fontFamily="sans-serif-condensed"
                      android:paddingBottom="10dp" android:text="@string/app_name"
                      android:textAlignment="viewEnd"
                      android:textColor="@color/colorWhiteText"
                      android:textStyle="italic"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>