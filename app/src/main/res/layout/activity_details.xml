<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:paddingBottom="20dp"
                                        android:paddingTop="20dp"
                                        app:cardBackgroundColor="@color/colorSecundaryDark">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:layout_marginRight="20dp"
                      android:orientation="vertical"
                      android:paddingBottom="10dp"
                      android:paddingEnd="10dp"
                      android:paddingStart="10dp"
                      android:paddingTop="10dp">
            <ImageView android:id="@+id/starred_image" android:layout_width="match_parent"
                       android:layout_height="250dp"
                       android:layout_marginBottom="10dp"
                       android:maxHeight="200dp"/>
            <RelativeLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

            >

                <TextView android:id="@+id/starred_description" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentStart="true"
                          android:layout_centerVertical="true"
                          android:paddingBottom="8dp"
                          android:paddingTop="30dp"
                          android:text="@string/app_name" android:textColor="@color/colorWhiteText"
                          android:textSize="15sp" android:textStyle="bold"/>
                <TextView android:id="@+id/starred_title" android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingBottom="10dp"
                          android:text="@string/app_name"
                          android:textColor="@color/colorWhiteText"
                          android:textSize="20sp"
                          android:textStyle="bold"
                />
                <TextView android:id="@+id/vote_average" android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:fontFamily="sans-serif-condensed"
                          android:paddingBottom="10dp" android:text="@string/app_name"
                          android:textAlignment="viewEnd"
                          android:textColor="@color/colorWhiteText"
                          android:textStyle="italic"/>

            </RelativeLayout>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/app_name"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:id="@+id/starred_release_date"
                      android:textColor="@color/colorWhiteText"
                      android:fontFamily="sans-serif-condensed"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/app_name"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:id="@+id/original_language"

                      android:textColor="@color/colorWhiteText"
                      android:fontFamily="sans-serif-condensed"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/app_name"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:id="@+id/vote_count"

                      android:textColor="@color/colorWhiteText"
                      android:fontFamily="sans-serif-condensed"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="@string/app_name"
                      android:textSize="15sp"
                      android:textStyle="bold"
                      android:id="@+id/starred_popularity"
                      android:textColor="@color/colorWhiteText"
                      android:fontFamily="sans-serif-condensed"
            />


        </LinearLayout>

    </android.support.v7.widget.CardView>
</ScrollView>