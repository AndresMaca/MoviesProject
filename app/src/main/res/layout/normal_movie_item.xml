<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_height="wrap_content"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    app:cardBackgroundColor="@color/colorSecundary"
                                    android:layout_margin="10dp"
>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
    >


        <ImageView
            android:id="@+id/movie_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/hpfb"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/movietitle_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorWhiteText"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/movie_imageview"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/movie_imageview"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/movie_average"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movietitle_textview"
            android:layout_marginLeft="0dp"
            android:textColor="@color/colorWhiteText"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/movietitle_textview"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/movie_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/colorWhiteText"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movie_average"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/movie_average"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="20dp"
        />
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>